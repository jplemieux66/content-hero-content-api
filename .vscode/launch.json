{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Serverless Offline",
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "args": ["offline", "--noTimeout"],
      "sourceMaps": true,
      "runtimeArgs": ["--lazy"],
      "outFiles": ["${workspaceFolder}/.webpack/**/*.js"],
      "protocol": "inspector",
      "runtimeExecutable": "node",
      "windows": {
        "program": "${workspaceFolder}\\node_modules\\serverless\\bin\\serverless"
      }
    }
  ]
}
